//             sum++;
//          }
    
//   }
//   std::cout << sum << "\n";
//  int  k , n , w  ; 
//  std::cin >> k >> n >> w ;
//   int sum = 0 ;
//   for (int i = 1; i <= w; i++) {
//         sum += i  * k ; 
//   }
//   std::cout << abs (sum-n) << "\n";
    return 0;
}
